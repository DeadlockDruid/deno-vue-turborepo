{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!eslint.config.js",
        "!**/*.md",
        "!**/*.d.ts"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md", "!tsconfig.json"],
      "cache": true
    },
    "test": {
      "outputs": [],
      "inputs": [],
      "cache": true
    },
    "test:coverage": {
      "outputs": [],
      "inputs": [],
      "cache": true
    },
    "check-types": {
      "outputs": [],
      "inputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "inputs": [],
      "cache": true
    },
    "deploy": {
      "outputs": [],
      "cache": false
    },
    "sonar": {
      "outputs": [],
      "cache": false
    },
    "codeql-run-analysis": {
      "outputs": [],
      "cache": false
    },
    "codeql-upload-result": {
      "outputs": [],
      "cache": false
    }
  }
}
