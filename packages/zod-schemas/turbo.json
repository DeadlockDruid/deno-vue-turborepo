{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!eslint.config.js",
        "!**/*.md",
        "!**/*.d.ts"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md", "!tsconfig.json"],
      "cache": true
    }
  }
}
